<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <!-- Department Name Title -->
    <TextView
        android:id="@+id/clinicalRecordTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clinical Record:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="4dp" />

    <!-- Department Name TextView -->
    <TextView
        android:id="@+id/clinicalRecordItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_below="@id/clinicalRecordTitle"
        android:layout_marginTop="30dp" />

    <Button
        android:id="@+id/editButton_clinicalRecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:backgroundTint="#008787"
        android:textColor="@color/white"
        android:layout_alignTop="@id/clinicalRecordTitle"
        android:layout_alignParentEnd="true"
        android:padding="8dp" />

    <Button
        android:id="@+id/deleteButton_clinicalRecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X"
        android:backgroundTint="#E53935"
        android:textColor="@color/white"
        android:layout_below="@id/editButton_clinicalRecord"
        android:layout_alignParentEnd="true"
        android:padding="8dp" />

</RelativeLayout>
